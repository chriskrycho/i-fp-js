{
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/parser": "^4.10.0",
    "ember-cli": "3.26.1",
    "ember-try": "^1.4.0",
    "eslint": "^7.15.0",
    "expect-type": "^0.11.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.2",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.20.20",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true
    },
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "no-redeclare": "off",
      "no-irregular-whitespace": "off"
    }
  },
  "volta": {
    "node": "14.15.1",
    "yarn": "1.22.10",
    "npm": "7.1.2"
  }
}
